<section id="blackbgreview">
  <div class="blackbgreview">
    <div class="black-content">
    {%for block in section.blocks%}
    <div class="main-content">
      <div class="heading">
        <h2>{{ block.settings.heading }}</h2>
      </div>
      <div class="desc">
        <p>{{ block.settings.desc }}</p>
      </div>
    </div>
    {%endfor%}
</div>
  </div>
</section>
{% schema %}
{
  "name": "Blackbg Review",
  "tag": "section",
  "class": "section",
  "settings": [],
  "blocks": [
    {
      "name": "Review Block",
      "type": "reviews",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Main Title"
        },
        {
          "type": "text",
          "id": "desc",
          "label": "Description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Blackbg Review",
      "settings": {}
    }
  ]
}
{% endschema %}
