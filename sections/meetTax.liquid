<section id="meettax">
    <div class="meettax">
        <div class="meettax-img">
            <img src="{{section.settings.image | img_url: 'master'}}" alt="" />
        </div>
        <div class="meettax-text">
            <h2>{{section.settings.mainheading}}</h2>
            <h3>{{section.settings.subheading}}</h3>
            <p>{{section.settings.desc}}</p>
        </div>
    </div>
</section>
{% schema %}
  {
    "name": "Meet Tax",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "main image"
    },
    {
        "type": "text",
        "id": "mainheading",
        "label": "Main Title"
    },
    {
        "type": "text",
        "id": "subheading",
        "label": "Sub Heading"
    },
    {
        "type": "richtext",
        "id": "desc",
        "label": "Description"
    }
    ],
    "presets": [
      {
        "name": "Meet Tax",
        "settings": {
        }
      }
    ]
  }
{% endschema %}