<section id="reportdashboard">
  <div class="reportdashboard">
    <h2>{{ section.settings.heading }}</h2>
    <div class="reportdashboard-items">
      {% for block in blocks.settings %}
        <div class="reportdashboard-item">
          <img src="{{block.settings.image | img_url:'master'}}" alt="">
          <h3>{{ block.settings.title }}</h3>
          <p>{{ block.settings.desc }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Report Dashboard",
  "tag": "section",
  "class": "section",
  "settings": [
      {
    "type": "text",
    "id": "heading",
    "label": "main title"
  }
  ],
  "blocks": [
      {
          "name": "reports",
        "type": "report",
          "settings": [
              {
              "type": "image_picker",
              "id": "image",
              "label": "Report Image"
              },
              {
                  "type": "text",
                  "id": "title",
                  "label": "Image Title"
              },
              {
              "type": "richtext",
              "id": "desc",
              "label": "Image Descripition"
              }
          ]
      }
  ],
  "presets": [
    {
      "name": "Report Dashboard",
      "settings": {
      }
    }
  ]
}
{% endschema %}
