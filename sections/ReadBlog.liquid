<section id="readblog">
    <div class="read-container">
        <h2>Read our blog</h2>
        <p>{{section.settings.sectionDesc}}</p>

        <div class="blog">
            {%for block in section.blocks %}
        <div class="blog-list">
            <img src="{{block.settings.image | img_url: 'master'}}" alt="" />
            <p class="date">{{block.settings.date}}</p>
            <h3>{{block.settings.heading}}</h3>
        </div>
        {%endfor%}
        </div>
    </div>
</section>
{% schema %}
  {
    "name": "Blog Section",
    "tag": "section",
    "class": "section",
    "settings": [
        {
            "type": "text",
            "id": "bloghead",
            "label": "Section Title"
        },
        {
            "type": "text",
            "id": "sectionDesc",
            "label": "Section Description"
        }
    ],
    "blocks":[
        {
            "name": "blog",
            "type": "blog",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Images"
                },
                {
                    "type": "text",
                    "id": "date",
                    "label": "Date"
                },
                {
                    "type": "text",
                    "id": "heading",
                    "label": "Main Heading"
                }
            ]
            
        }

    ],
    "presets": [
      {
        "name": "Blog Section",
        "settings": {
        }
      }
    ]
  }
{% endschema %}