<section id="scooterModel">
  <div class="model-container">
    <div class="model-content">
      <div class="model-content-one">
        <div class="model-header">
        <h2>{{ section.settings.heading }}</h2>
        <p>{{ section.settings.para }}</p>
        </div>
        <div class="model-images">
          <div class="df-model-img">
            <img src="{{section.settings.img-one | img_url:'master' }}" alt="df-model-img">
          </div>
          <div class="df-model-img">
            <img src="{{section.settings.img-two | img_url:'master' }}" alt="dfx-model-img">
          </div>
        </div>
      </div>
      <div class="model-content-two">
        <div class="model-btn-container">
          <button class="btn df-model active">{{ section.settings['first-btn-txt'] }}</button>
          <button class="btn df-model">{{ section.settings['second-btn-txt'] }}</button>
        </div>
        <a href="#">{{ section.settings.compare-txt }}</a>
        <div class="feature-container">
          <div class="model-price">
            <p class="first-model-price">{{ section.settings['first-model-price'] }}</p>
            <p class="first-model-price">{{ section.settings['second-model-price'] }}</p>
          </div>
          <div class="feature-info">
          <ul class="feature-list">
            {% for block in section.blocks %}
              <li class="feature">
                {{ block.settings.feature }}
                <span class="feature-desc">{{ block.settings['feature-desc'] }}</span>
              </li>
            {% endfor %}
          </ul>
        </div>
        <div class="feature-container">
            <div class="model-price">
              <p class="first-model-price">{{ section.settings['second-model-price'] }}</p>
            </div>
            <div class="feature-info">
            <ul class="feature-list">
              {% for block in section.blocks %}
                <li class="feature">
                  {{ block.settings.feature }}
                  <span class="feature-desc">{{ block.settings['feature-desc'] }}</span>
                </li>
              {% endfor %}
            </ul>
          </div>
        <div class="reserve-btn">
        <button>{{section.settings.btn-text}}</button>
        </div>
        </div>
      </div>
    </div>
  </div>
</section>
{% schema %}
{
  "name": "Scooter Model",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Main Title"
    },
    {
      "type": "text",
      "id": "para",
      "label": "Main Para"
    },
    {
      "type": "image_picker",
      "id": "img-one",
      "label": "First Model Image"
    },
    {
      "type": "image_picker",
      "id": "img-two",
      "label": "Second Model Image"
    },
    {
      "type": "text",
      "id": "first-btn-txt",
      "label": "First Model Name"
    },
    {
      "type": "text",
      "id": "second-btn-txt",
      "label": "Second Model Name"
    },
    {
      "type": "text",
      "id": "first-model-price",
      "label": "First Model Price"
    },
    {
      "type": "text",
      "id": "second-model-price",
      "label": "Second Model Price"
    },
    {
        "type": "text",
        "id": "compare-txt",
        "label": "Compare Text"
      },
      {
        "type": "url",
        "id": "compare-txt-url",
        "label": "Compare Text Url"
      },
    {
        "type": "text",
        "id": "btn-text",
        "label": "Button Title"
      },
      {
          "type": "url",
          "id": "url",
          "label": "Button Url"
        }
  ],
  "blocks": [
    {
      "name": "Model Features",
      "type": "model",
      "settings": [
        {
          "type": "text",
          "id": "feature",
          "label": "Model Features"
        },
        {
          "type": "text",
          "id": "feature-desc",
          "label": "Model Description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Scooter Model",
      "settings": {}
    }
  ]
}
{% endschema %}
